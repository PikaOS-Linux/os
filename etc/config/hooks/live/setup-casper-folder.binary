#!/bin/sh

mkdir casper || true
cp -rfv boot/filesystem.squashfs casper/filesystem.squashfs
cp -rfv boot/filesystem.size casper/filesystem.size || true
cp -rfv boot/initrd.img-* casper/initrd.lz
cp -rfv boot/vmlinuz-* casper/vmlinuz
cp -rfv boot/filesystem.packages-remove casper/filesystem.manifest-remove
cp -rfv boot/filesystem.packages casper/filesystem.manifest

mkdir live || true
cp -rfv casper/vmlinuz live/vmlinuz
