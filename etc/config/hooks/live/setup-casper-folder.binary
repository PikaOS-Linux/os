#!/bin/sh

mkdir casper || true
mv boot/filesystem.squashfs casper/filesystem.squashfs
mv boot/filesystem.size casper/filesystem.size || true
cp boot/initrd.img-*generic casper/initrd.lz
cp boot/vmlinuz-*generic casper/vmlinuz
mv boot/filesystem.packages-remove casper/filesystem.manifest-remove || true
mv boot/filesystem.packages casper/filesystem.manifest || true

mkdir live || true
cp casper/vmlinuz live/vmlinuz
