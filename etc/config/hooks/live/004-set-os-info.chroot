#!/bin/sh
# Description: Set PikaOS name and info

# Prepare
distro_pretty_name="@DISTRO_NAME @VERSION @CHANNEL"

# Set OS name
echo "PikaOS 22.10  /\n /\l" > /etc/issue

# Set OS info
echo 'PRETTY_NAME="PikaOS 22.10"
NAME="PikaOS"
VERSION_ID="22.10"
VERSION="22.10 (Kinetic Kudu)"
VERSION_CODENAME=kinetic
ID=pika
ID_LIKE="ubuntu debian"
VERSION_CODENAME=kinetic
UBUNTU_CODENAME=kinetic
LOGO=pika-logo
' > /etc/os-release
